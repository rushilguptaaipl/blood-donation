                </td>
            </tr>`;
            tableBody.insertAdjacentHTML('beforeend', row);
          });
        } catch (error) {
          console.log(error);
          const row = `<h1 style="text-align:right">${'No Donation Found'}</h1>`;
          tableBody.insertAdjacentHTML('beforeend', row);
        }

        // delete Donation
        const deleteButton = document.getElementsByClassName('delete');
        for (let i = 0; i < deleteButton.length; i++) {
          deleteButton[i].addEventListener('click', async (event) => {
            try {
              const id = parseInt(event.target.id);
              const deleteDonationDto = {
                id: id,
              };
              const response = await axios.post(
                'http://localhost:3000/admin/deletedonation',
                deleteDonationDto,
              );
              window.alert('Deleted');
              location.reload();
            } catch (error) {
              console.log(error);
            }
          });
        }

        // filter donation
        const filterForm = document.getElementById('filterForm');
        filterForm.addEventListener('submit', async (event) => {
          event.preventDefault();
          const formData = new FormData(filterForm);
          const city = formData.get('city');
          const blood_group = formData.get('blood_group');
          const adminFindDonation = {
            city : city,
            blood_group : blood_group
          }
          try{
            const response = await axios.post("http://localhost:3000/admin/finddonation", adminFindDonation);
            const tableRowBody = document.getElementById("tableRowBody")
            console.log(tableRowBody);
            tableRowBody.innerHTML = ""
            response.data.map((item) => {
            const row = `<tr>
            <td>${item.name}</td>
            <td>${item.city.city}</td>
            <td>${item.contact}</td>
            <td>${item.email}</td>
            <td>${item.gender}</td>
            <td>${item.blood_group}</td>
            <td>${item.DOB}</td>
            <td>${item.disease}</td>
            <td class="action-buttons">
                    <button class="update" value = "${item.id}" , id = "${item.id}">Update</button>
                    <button class="delete" value = "${item.id}" , id = "${item.id}">Delete</button>
                </td>
            </tr>`;
            tableBody.insertAdjacentHTML('beforeend', row);
          });
          }
          catch(error){console.log(error);}
        });
        // update donation
        const updateButton = document.getElementsByClassName('update');
        for (let i = 0; i < deleteButton.length; i++) {
          updateButton[i].addEventListener('click', async (event) => {
            try {
              const id = parseInt(event.target.id);
             
              const url = `http://localhost:3000/admin/update?id=${id}`
              window.location.href = url;
            } catch (error) {
              console.log(error);
            }
          });
        }
      });
    </script>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-container">
