<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/donation.css" />
    <title>Donation Page</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', async () => {
        localStorage.setItem('url', 'http://localhost:3000');
        var url = localStorage.getItem('url');
        const maleradio = document.getElementById('maleradio');
        const femaleradio = document.getElementById('femaleradio');
        const donationForm = document.getElementById('donationForm');
        donationForm.addEventListener('submit', async (event) => {
          event.preventDefault();
          const formData = new FormData(donationForm);
          const name = formData.get('name').trim().toLowerCase();
          const city = formData.get('city').trim().toLowerCase();
          const contact = formData.get('contact').trim();
          const disease = formData.get('disease');
          const email = formData.get('email').trim();
          const blood_group = formData.get('blood_group');
          const DOB = formData.get('DOB');
          if (maleradio.checked == true) {
            var gender = maleradio.value;
          } else {
            gender = femaleradio.value;
          }
          const createDonationDto = {
            name: name,
            city: city,
            contact: contact,
            disease: disease,
            email: email,
            blood_group: blood_group,
            DOB: DOB,
            gender: gender,
          };
          try {
            const response = await axios.post(
              url+'/createDonation',
              createDonationDto,
            );
            window.alert('Successfull');
          } catch (error) {
            console.log(error);
          }
        });
      });
    </script>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-container">
        <div class="logo">Donation</div>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/emergency">Emergency</a></li>
          <li><a href="/donation">Donation</a></li>
        </ul>
      </div>
    </nav>

    <div class="donation-form">
      <h2>Register for Donation</h2>
      <form id="donationForm">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Enter your name"
            required
          />
        </div>
        <div class="form-group">
          <label for="city">City:</label>
          <input
            type="text"
            id="city"
            name="city"
            placeholder="Enter your city"
            required
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone:</label>
          <input
            type="tel"
            id="phone"
            name="contact"
            placeholder="Enter your phone number"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter your email"
            required
          />
        </div>
        <div class="form-group">
          <label for="disease">Any Previous Disease:</label>
          <select id="disease" name="disease" required>
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </div>
        <div class="form-group">
          <label>Gender:</label>
          <input
            type="radio"
            id="maleradio"
            name="gender"
            value="Male"
            required
          />
          <label for="male">Male</label>
          <input type="radio" id="femaleradio" name="gender" value="Female" />
          <label for="female">Female</label>
        </div>
        <div class="form-group">
          <label for="blood-group">Blood Group:</label>
          <select id="blood-group" name="blood_group" required>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
          </select>
        </div>
        <div class="form-group">
          <label for="dob">Date of Birth:</label>
          <input type="date" id="dob" name="DOB" required />
        </div>
        <button type="submit" class="submit-btn">Register</button>
      </form>
    </div>
  </body>
</html>
