<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/adminhome.css" />
    <title>Admin Home</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded",async()=>{
        const logout = document.getElementById("logout")
        logout.addEventListener("click",async()=>{
          try{
            const response = await axios.get("http://localhost:3000/logout")
            window.location.href = "http://localhost:3000/login"
          }
          catch(error){console.log(error);}
        })
      })
    </script>
  </head>
  <body>
    <nav class="navbar">
      <div class="navbar-container">
        <div class="logo">Admin Panel</div>
        <ul class="nav-links">
          <li><a href="/admin/city">City</a></li>
          <li><a href="/admin/emergency">Emergency</a></li>
          <li><a href="/admin/donation">Donation</a></li>
        </ul>
      </div>
    </nav>

    <div class="admin-home">
      <h2>Welcome to Admin Panel</h2>
      <div class="admin-buttons">
        <a href="/admin/city" class="admin-button">City</a>
        <a href="/admin/emergency" class="admin-button">Emergency</a>
        <a href="/admin/donation" class="admin-button">Donation</a>
        <button id="logout" class="admin-button">Logout</button>
      </div>
    </div>
  </body>
</html>
